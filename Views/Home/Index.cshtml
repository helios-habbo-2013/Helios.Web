<body>

    <div id="overlay"></div>
    <script type="text/javascript">

        if (window.HabboView) {
            HabboView.add(initChangePasswordForm);
        } else if (window.habboPageInitQueue) {
            habboPageInitQueue.push(initChangePasswordForm);
        }
    </script>



    <header>
        <div id="border-left"></div>
        <div id="border-right"></div>
        @if (ViewBag.Error != null)
        {
            <div id="login-errors">
                @switch (ViewBag.Error)
                {
                    case "no_exist":
                    case "password":
                        {
                            @("Incorrect password, oops!")
                            break;
                        }
                    case "fields":
                        {
                            @("All fields are required")
                            break;
                        }
                    default:
                        {
                            @("An unexpected error occured.")
                            break;
                        }
                }
            </div>
        }
        <div id="login-form-container">
            <a href="#home" id="habbo-logo"></a>

            <form action="/account/submit" method="post">


                <div id="login-columns">
                    <div id="login-column-1">
                        <label for="credentials-email">Username</label>
                        <input tabindex="2" type="text" name="username" id="credentials-email">
                    </div>

                    <div id="login-column-2">
                        <label for="credentials-password">Password</label>
                        <input tabindex="3" type="password" name="password" id="credentials-password">
                    </div>

                    <div id="login-column-3">
                        <input type="submit" value="Login" style="margin: -10000px; position: absolute;">
                        <a href="#" tabindex="4" class="button" id="credentials-submit"><b></b><span>Login</span></a>
                    </div>

            </form>
        </div>

        <script>
            habboPageInitQueue.push(function () {
                if (!LandingPage.focusForced) {
                    LandingPage.fieldFocus('credentials-email');
                }
            });
        </script>
        <div id="alerts">
            <noscript>
                <div id="alert-javascript-container">
                    <div id="alert-javascript-title">
                        Missing JavaScript support
                    </div>
                    <div id="alert-javascript-text">
                        Javascript is disabled on your browser. Please enable JavaScript or upgrade to a Javascript-capable browser to use Habbo :)
                    </div>
                </div>
            </noscript>

            <div id="alert-cookies-container" style="display:none">
                <div id="alert-cookies-title">
                    Missing cookie support
                </div>
                <div id="alert-cookies-text">
                    Cookies are disabled on your browser. Please enable cookies to use Habbo.
                </div>
            </div>
            <script type="text/javascript">
            </script>
        </div>
        <div id="top-bar-triangle"></div>
        <div id="top-bar-triangle-border"></div>
    </header>


    <div id="content">
        <ul>
            <li id="home-anchor">
                <div id="welcome">
                    <a href="quickregister/start" class="button large" id="join-now-button"><b></b><span>Join today</span><span class="sub">(It's free)</span></a>
                    <div id="slogan">
                        <h1>Welcome to Habbo,</h1>
                        <p>a strange place with awesome people.</p>
                        <p><a id="tell-me-more-link" href="#">Tell me more...</a></p>
                    </div>
                </div>
                <div id="carousel">
                    <div id="image1"></div>
                    <div id="image2"></div>
                    <div id="image3"></div>
                    <div id="tell-me-more">Habbo Hotel is a virtual world for players 13 years and older, where you can create your very own Habbo character and design your room the way you like. You'll meet new friends, chat, organize parties, look after virtual pets, create and play games and complete quests. Click 'Join Today' to get started!</div>
                </div>

                <div id="floaters"></div>
            </li>

            <div id="magnifying-glass"></div>
            <div id="sail"></div>
    </div>

    <footer>
        <div id="partner-logo"><a href="https://help.habbo.com/entries/22561483-What-is-Habbo-" style="background-image: url('@Url.AbsoluteContent("~/c_images/Landingpage_partner_logos/whatishabboEN.gif")')"></a></div>
        <div id="age-recommendation"></div>

        <div id="footer-content" class="partner-logo-present">
