					<div id="error-title" class="error">
						@switch (ViewBag.Error)
						{
							case "no_exist":
							case "password":
								{
									@("Incorrect password, oops!")
									break;
								}
							case "fields":
								{
									@("All fields are required.")
									break;
								}
							case "captcha":
								{
									@("The captcha did not match.")
									break;
								}
							default:
								{
									@("An unexpected error occured.")
									break;
								}
